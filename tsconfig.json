{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["es2015", "dom"],
    "strict": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "files": [
    "typings/ae-shims.d.ts",
    "typings/txt-shims.d.ts",
    "typings/vue-shims.d.ts",
    "typings/svg-shims.d.ts"
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.vue",
    "./stories/**/*.ts"
  ]
}
